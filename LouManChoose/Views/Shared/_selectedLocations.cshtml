@model LouManChoose.veiwModels.Result


@if (Model != null)
{
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <div>
                @* angel was onclick *@
                <span class="star glyphicon glyphicon-star-empty pull-right" onclick="Favorite();"></span>
            </div>
            
            <input type="hidden" id="locationId" value="@Model.id"/>
            <h4 class="modal-title">@Model.name</h4>
        </div>
        <div class="modal-body">
            <p><img src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference=@Model.photos.FirstOrDefault().photo_reference&key=AIzaSyAUmnlcZvvd_b31I8JVPkHyeW-fUkJVbqM" class="img-responsive"/></p>
        </div>


        <div class="modal-footer">
            <a class="btn btn-default" href="https://www.google.com/maps/dir/?api=1&origin=My+Location&destination=@Model.vicinity">Get Direction</a>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
}
